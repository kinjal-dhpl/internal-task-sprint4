    padding: 10px 12px;
    border-radius: 8px;
    margin-top: 10px;
  }
  .diamond-modal-card-header {
    display: flex;
    justify-content: space-between;
    font-weight: 600;
    font-size: 14px;
  }
  .diamond-modal-price {
    color: #000;
  }
  .diamond-modal-card-sub {
    font-size: 12px;
    color: #777;
    margin: 4px 0;
  }
  .diamond-modal-specs {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: #555;
  }
  .diamond-modal-total {
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
    padding-top: 10px;
    border-top: 1px solid #eee;
  }
  .diamond-modal-total-label {
    font-size: 12px;
    color: #777;
  }
  .diamond-modal-total-value {
    font-weight: 600;
    font-size: 14px;
    margin-top: 2px;
  }
  .diamond-head,
  .diamond-head *{
    cursor: pointer;
  }
