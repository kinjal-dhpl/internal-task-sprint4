<style>
  .pb-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 4;
  }
  /* Container */
  .price-breakdown-container {
    max-width: 560px;
    max-height: 85vh;
    min-width: 300px;
    width: 40%;
    background: #fff;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
    font-family: Arial, sans-serif;
    font-size: 14px;
    line-height: 1.5;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
  }
  .pb-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .pb-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: bold;
  }
  .close-btn {
    border: none;
    background: transparent;
    font-size: 20px;
    cursor: pointer;
    color: #555;
  }
  .pb-subtitle {
    font-size: 13px;
    color: #777;
    margin: 6px 0 20px;
  }
  .pb-title {
    text-align: center;
    margin-bottom: 16px;
  }
  .pb-title h4 {
    margin: 0;
    font-size: 15px;
    font-weight: bold;
  }
  .pb-title p {
    margin: 10px 0 0;
    color: #555;
  }
  .pb-section {
    margin-bottom: 16px;
    background: rgba(134, 134, 139, 0.03);
    padding: 10px;
    border-radius: 10px;
  }
  .pb-row {
    display: flex;
    justify-content: space-between;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0px;
    margin-bottom: 4px;
  }
  .pb-note {
    font-weight: 500;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: 0px;
    color: #86868B;
  }
  .pb-box {
    background: rgba(0, 0, 0, 0.04);
    border-radius: 6px;
    padding: 6px 8px;
    font-weight: 500;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: 0px;
    font-family: Lato;
    color: rgba(29, 29, 31, 0.6);
    margin-top: 10px;
  }
  .pb-total {
    display: flex;
    justify-content: space-between;
    font-weight: 500;
    font-size: 20px;
    line-height: 30px;
    letter-spacing: 0px;
    margin-top: 20px;
    font-weight: bold;
  }
  .pb-total-note {
    font-size: 12px;
    color: #777;
    margin-top: 4px;
    text-align: right;
  }
  /* ========== Diamond Modal ========== */
  .dm-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 6;
  }
  .diamond-modal {
    background: #fff;
    width: 100%;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
    top: 50%;
    z-index: 7;
  }
  .diamond-modal-close {
    position: absolute;
    top: 12px;
    right: 14px;
    background: none;
    border: none;
    font-size: 22px;
    cursor: pointer;
    color: #555;
  }
  .diamond-modal-title {
    margin: 0;
    font-weight: 600;
    font-size: 22px;
    line-height: 100%;
    letter-spacing: 0px;
    font-family: Inter;
  }
  .diamond-modal-subtitle {
    color: #86868B;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0px;
    margin-top: 6px;
    margin-bottom: 15px;
  }
  .diamond-modal-heading {
    margin: 0;
    font-weight: 500;
    font-size: 20px;
    line-height: 30px;
    letter-spacing: 0px;
    text-align: center;
  }
  .diamond-modal-metal {
    color: #86868B;
    margin-top: 10px;
    margin-bottom: 16px;
    text-align: center;
    font-style: Medium;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0px;
  }
  .diamond-modal-card {
