<style>
  /* Modal backdrop */
  #trackingModal {
    display: none;
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.6);
    z-index: 9999;
    justify-content: center;
    align-items: center;
    font-family: var(--oregon-font);
  }

  /* Ensure loader appears above tracking modal */
  .global-loader,
  .loader,
  [class*="loader"],
  [id*="loader"] {
    z-index: 10000 !important;
  }

  /* Modal box */
  #trackingModal .modal-content {
    background: #fff;
    padding: 24px;
    border-radius: 12px;
    width: 400px;
    max-width: 90%;
    position: relative;
    box-shadow: 0 6px 18px rgba(0,0,0,0.2);
    animation: scaleIn 0.25s ease;
  }

  /* Close button */
  #trackingModal .close-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    background: none;
    border: none;
    font-size: 18px;
    cursor: pointer;
  }

  /* Labels */
  #trackingModal label {
    display: block;
    margin-bottom: 4px;
    font-weight: 500;
    color: #333;
    font-size: 14px;
  }

  /* Inputs */
  #trackingModal input {
    width: 100%;
    margin-bottom: 16px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
    box-sizing: border-box;
  }

  /* Save button */
  #trackingModal #saveTrackingBtn {
    background: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 10px 16px;
    cursor: pointer;
    font-size: 15px;
    transition: background 0.2s ease;
  }

  #trackingModal #saveTrackingBtn:hover {
    background: #0056b3;
  }

  /* Error text */
  #trackingError {
    color: #d9534f;
    font-size: 13px;
    margin-bottom: 10px;
    display: none;
  }

  /* Success text */
  #trackingSuccess {
    color: #28a745;
    font-size: 13px;
    margin-bottom: 10px;
    display: none;
  }

  @keyframes scaleIn {
    from { transform: scale(0.9); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
</style>

<div id="trackingModal">
  <div class="modal-content">
    <button id="closeTrackingModal" class="close-btn">âœ•</button>
    <h3 style="margin-bottom: 16px;">Tracking Info</h3>
    <p id="trackingError"></p>
    <p id="trackingSuccess"></p>
    
    <label for="trackingLink">Tracking Link (optional)</label>
    <input id="trackingLink" type="text" placeholder="http://www.example.com">
    
    <label for="trackingNumber">Tracking Number (optional)</label>
    <input id="trackingNumber" type="text" placeholder="675678.....">
    
    <button id="saveTrackingBtn">Save</button>
  </div>
</div>