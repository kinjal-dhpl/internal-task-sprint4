<style>
/* Tracking Modal Styles */
.tracking-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

.tracking-modal.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tracking-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.tracking-modal-content {
  position: relative;
  background: white;
  min-width: 400px;
  max-width: 600px;
  width: 90%;
  margin: 50px auto;
  border-radius: 12px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  animation: slideDown 0.3s ease;
  overflow: hidden;
}

.tracking-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px 28px;
  border-bottom: 1px solid #e5e7eb;
  color: white;
}

.tracking-modal-header h2 {
  margin: 0;
  font-size: 20px;
  font-weight: 600;
}

.tracking-modal-close {
  background: black;
  border: none;
  width: 32px;
  height: 32px;
  border-radius: 6px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  color: white;
}

.tracking-modal-close:hover {
  background: rgba(0, 0, 0, 0.3);
  transform: rotate(90deg);
}

.tracking-modal-body {
  padding: 28px;
}

.tracking-info-row {
  margin-bottom: 24px;
  padding-bottom: 24px;
  border-bottom: 1px solid #f3f4f6;
}

.tracking-info-row:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.tracking-info-label {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  font-weight: 600;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 10px;
}

.tracking-info-label svg {
  color: #667eea;
}

.tracking-info-value {
  font-size: 16px;
  color: #111827;
  font-weight: 500;
  padding: 12px 16px;
  background: #f9fafb;
  border-radius: 8px;
  word-break: break-all;
}

.tracking-modal-footer {
  padding: 20px 28px;
  background: #f9fafb;
  border-top: 1px solid #e5e7eb;
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

.tracking-action-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tracking-action-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.tracking-close-button {
  padding: 10px 20px;
  background: white;
  color: #6b7280;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tracking-close-button:hover {
  background: #f3f4f6;
  border-color: #9ca3af;
}

.tracking_view_button button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .tracking-modal-content {
    margin: 20px;
    min-width: unset;
    max-width: calc(100% - 40px);
  }
  
  .tracking-modal-footer {
    flex-direction: column;
  }
  
  .tracking-action-button,
  .tracking-close-button {
    width: 100%;
    justify-content: center;
  }
}
</style>

<!-- Tracking Details Modal -->
<div id="trackingDetailsModal" class="tracking-modal">
  <div class="tracking-modal-overlay" onclick="closeTrackingModal()"></div>
  <div class="tracking-modal-content">
    <div class="tracking-modal-header">
      <h2>Tracking Details</h2>
      <button class="tracking-modal-close" onclick="closeTrackingModal()">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    <div class="tracking-modal-body">
      <div class="tracking-info-row">
        <div class="tracking-info-label">
          Tracking Number
        </div>
        <div class="tracking-info-value" id="trackingNumberValue">-</div>
      </div>
      <div class="tracking-info-row">
        <div class="tracking-info-label">
          Tracking Link
        </div>
        <div class="tracking-info-value" id="trackingLinkValue">-</div>
      </div>
    </div>
  </div>
</div>
