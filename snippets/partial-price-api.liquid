<script>
  /**
   * Fetch partial price calculation from API
   * @param {Array} products - Array of product objects with variantId, quantity, and size
   * @returns {Promise<Object>} - Promise that resolves to API response data
   */
  async function fetchPartialPriceCalculation(products) {
    if (!products || !Array.isArray(products) || products.length === 0) {
      throw new Error('Products array is required and must not be empty');
    }

    try {
      // Build request body
      const requestBody = {
        products: products.map(product => ({
          variantId: String(product.variantId),
          quantity: product.quantity || 1,
          size: product.size
        }))
      };

      // Fetch from API
      const apiUrl = `${window.EA_MODULE_BASE_URL}/price/partial-price-calculation`;
      const response = await fetch(apiUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(requestBody)
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const apiResponse = await response.json();

      if (apiResponse?.status === 'success' && Array.isArray(apiResponse.data) && apiResponse.data.length > 0) {
        return apiResponse.data;
      } else {
        throw new Error('Invalid API response format');
      }
    } catch (error) {
      console.error('Error fetching partial price calculation:', error);
      throw error;
    }
  }

  window.fetchPartialPriceCalculation = fetchPartialPriceCalculation;
</script>