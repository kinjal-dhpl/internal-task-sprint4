<style>
  .error-modal-wrapper {
    display: none;
    z-index: 9999;
    width: 100%;
    height: 100%;
    position: fixed;
    align-items: center;
    justify-content: center;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: all 0.3s ease-in-out;
  }

  .error-modal-wrapper.show {
    display: flex;
    opacity: 1;
  }

  .error-modal-content {
    background: white;
    border-radius: 8px;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transform: scale(0.9);
    transition: transform 0.3s ease-in-out;
  }

  .error-modal-wrapper.show .error-modal-content {
    transform: scale(1);
  }

  .error-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .error-modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #d32f2f;
    margin: 0;
  }

  .error-modal-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #666;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s ease;
  }

  .error-modal-close:hover {
    background-color: #f5f5f5;
  }

  .error-modal-message {
    color: #333;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    font-size: 16px;
    font-family: oregon-ldo-medium;
    min-height: 20px;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 4px;
    border-left: 4px solid #d32f2f;
  }

</style>

<div id="errorModal" class="error-modal-wrapper">
  <div class="error-modal-content">
    <div class="error-modal-header">
      <h3 class="error-modal-title">Error</h3>
      <button class="error-modal-close" onclick="closeErrorModal()">&times;</button>
    </div>
    <div class="error-modal-message" id="globalErrorMessage">
      <!-- Error message will be inserted here -->
    </div>
  </div>
</div>

<script>
let currentRetryAction = null;

function showErrorModal(message, retryCallback = null) {
  currentRetryAction = retryCallback;
  
  const errorElement = document.getElementById('globalErrorMessage');
  if (errorElement) {
    errorElement.textContent = message || 'An unknown error occurred';
  }
  
  const modal = document.getElementById('errorModal');
  if (modal) {
    modal.classList.add('show');
    document.body.style.overflow = 'hidden';
  }
}

function closeErrorModal() {
  // Execute retry action before closing
  if (currentRetryAction && typeof currentRetryAction === 'function') {
    currentRetryAction();
  }
  
  document.getElementById('errorModal').classList.remove('show');
  document.body.style.overflow = 'unset';
  currentRetryAction = null;
}

// Close modal when clicking outside
document.getElementById('errorModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeErrorModal();
  }
});

// Close modal on ESC key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    const modal = document.getElementById('errorModal');
    if (modal && modal.classList.contains('show')) {
      closeErrorModal();
    }
  }
});

// Expose functions globally
window.showErrorModal = showErrorModal;
window.closeErrorModal = closeErrorModal;
</script>
