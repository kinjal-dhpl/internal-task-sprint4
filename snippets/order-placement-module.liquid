// Apply a selected customer
function applyEndlessAisleCustomer(customer, options = {}) {
  if (!customer) return;

  const firstName = customer.firstName || '';
  const lastName = customer.lastName || '';

  let addr = null;
  if (customer.addresses && customer.addresses.length > 0) addr = customer.addresses[0];
  else if (customer.defaultAddress) addr = customer.defaultAddress;

  const data = {
    firstName,
    lastName,
    address1: addr.address1 || '',
    address2: addr.address2 || '',
    country: addr ? (addr.country || '') : (customer.country || ''),
    province: addr.province || '',
    city: addr.city || '',
    pincode: addr.zip || '',
    phone: addr.phone || ''
  };

  const skipFill = options && options.skipFillBilling === true;
  if (!skipFill) fillBillingFromDataset(data);

  const ringInput = document.getElementById('ring-expert-input');

  renderClientSavedAddresses(customer);
}



function renderClientSavedAddresses(customer) {
  if (!customer) return;

  let savedContainer = document.querySelector('.saved-addresses');
  if (!savedContainer) {
    const wrapper = document.createElement('div');
    wrapper.className = 'saved-addresses';
    wrapper.innerHTML = `
      <h2 class="shipping-title">Saved Addresses</h2>
      <div class="client-store-list"></div>
    `;
    const billing = document.getElementById('billing--address');
    if (billing && billing.parentNode) billing.parentNode.insertBefore(wrapper, billing);
    savedContainer = wrapper;
  }

  const listEl = savedContainer.querySelector('.client-store-list');
  if (!listEl) return;

  let addrs = [];
  if (Array.isArray(customer.addresses) && customer.addresses.length) addrs = customer.addresses;
  else if (customer.addressesV2?.nodes) addrs = customer.addressesV2.nodes;
  else if (customer.defaultAddress) addrs = [customer.defaultAddress];

  let html = '';

  addrs.forEach((addr, idx) => {
    const id = addr.id;
    const first = addr.firstName || '';
    const last = addr.lastName || '';
    const a1 = addr.address1 || '';
    const a2 = addr.address2 || '';
    const city = addr.city || '';
    const prov = addr.province || '';
    const zip = addr.zip || '';
    const country = addr.country || '';
    const phone = addr.phone || '';
    
    if (!a1 || !city) return;
    html += `
      <label class="store-option saved-address-option client-address-option">
        <input type="radio" name="saved-address" value="${id}"
          class="saved-address-radio client-saved-address-radio"
          data-first-name="${escapeHtml(first)}"
          data-last-name="${escapeHtml(last)}"
          data-address1="${escapeHtml(a1)}"
          data-address2="${escapeHtml(a2)}"
          data-country="${escapeHtml(country)}"
          data-province="${escapeHtml(prov)}"
          data-city="${escapeHtml(city)}"
          data-pincode="${escapeHtml(zip)}"
          data-phone="${escapeHtml(phone)}">
        <div class="store-details">
          <h4>${escapeHtml(first)} ${escapeHtml(last)}</h4>
          <p>${escapeHtml(a1)}${a2 ? ', ' + escapeHtml(a2) : ''}</p>
          <p>${escapeHtml(city)}${(city && prov) ? ', ' : ''}${escapeHtml(prov)} ${escapeHtml(zip)}</p>
          <p>${escapeHtml(country)}</p>
          <p>${escapeHtml(phone)}</p>
        </div>
      </label>`;
  });

  html += `
    <label class="store-option saved-address-option client-address-option">
      <input type="radio" name="saved-address" value="new" class="saved-address-radio client-saved-address-radio" checked>
      <div class="store-details"><h4>Use a new billing address</h4></div>
    </label>`;

  listEl.innerHTML = html;

  const clientRadios = listEl.querySelectorAll('.client-saved-address-radio');
  clientRadios.forEach(r =>
    r.addEventListener('change', function() {
      if (this.value === 'new') clearBillingFields();
      else fillBillingFromDataset(this.dataset);
    })
  );

  savedContainer.style.display = '';
}

function escapeHtml(s) {
  if (!s) return '';
  return String(s).replace(/[&<>"']/g, c => ({
    '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#39;"
  })[c]);
}

// Restore customer on load
document.addEventListener('DOMContentLoaded', function() {
  const raw = sessionStorage.getItem('EndlessAisleSelectedCustomer');
  if (raw) {
    const parsed = JSON.parse(raw);
    renderClientSavedAddresses(parsed);
    const initiallyChecked = document.querySelector('input[name="saved-address"]:checked');
    const skipFill = initiallyChecked && initiallyChecked.value === 'new';
    applyEndlessAisleCustomer(parsed, { skipFillBilling: !!skipFill });
    return;
  }

  const eaId = sessionStorage.getItem('EndlessAisleCustomerID');
  if (eaId) {
    
    const base = window.EA_MODULE_BASE_URL;


    fetch(`${base}/customers/${eaId}`)
      .then(r => r.ok ? r.json() : Promise.reject(r))
      .then(json => {
        const cust = json.data.customer;
        // Render addresses first so we can determine if the user wants a new billing address.
        renderClientSavedAddresses(cust);
        const initiallyChecked = document.querySelector('input[name="saved-address"]:checked');
        const skipFill = initiallyChecked && initiallyChecked.value === 'new';
        applyEndlessAisleCustomer(cust, { skipFillBilling: !!skipFill });
      })
      .catch(err => console.error('Failed to fetch EA customer', err));
  }
});


