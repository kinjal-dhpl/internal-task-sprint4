<!-- variant change confirmation Modal -->
<div id="var-change-confirmation-modal" class="modal-overlay">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title">Important</h3>
    </div>

    <div class="modal-main-body">
      You have changed the variant. Please reselect your Metal Tone and Metal Finish to continue
    </div>

    <div
      class="modal-footer"
      style="
        position: sticky;
        bottom: 0;
        display: flex;
        margin: 0;
        gap:4px;
        justify-content: space-between;
      "
    >
      <button class="edit-personalisation modal-action-btn" data-action="">Edit Metal Tone & Finish</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const modal = document.getElementById('var-change-confirmation-modal');

    const editPersonalisationButton = modal.querySelector('.edit-personalisation');
    editPersonalisationButton.addEventListener('click', function () {
      document.querySelector('.edit-button[data-action="edit-personalization"]').click();
      modal.classList.remove('active');
      document
        .querySelectorAll('.modal-content [data-action="close-modal"]')
        .forEach((btn) => btn.classList.add('hidden'));
    });
  });
</script>

