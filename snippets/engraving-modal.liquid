}
/* Responsive */
@media (max-width: 768px) {
    #engraving-modal .modal-content {
        width: 95%;
        margin: 20px;
    }
    
    #engraving-modal .ring-image-section {
        padding: 15px;
    }
    
    #engraving-modal .instruction-text {
        padding: 15px 20px 10px 20px;
    }
    
    #engraving-modal .input-section {
        padding: 0 20px 15px 20px;
    }
    
    #engraving-modal .action-buttons-section {
        padding: 0 20px 20px 20px;
    }
