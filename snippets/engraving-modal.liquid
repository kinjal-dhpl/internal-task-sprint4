    padding: 0 30px 20px 30px;
}
#engraving-modal .text-input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 16px;
    color: #333;
    box-sizing: border-box;
    transition: border-color 0.3s ease;
}
#engraving-modal .text-input:focus {
    outline: none;
    border-color: #333;
}
#engraving-modal .text-input::placeholder {
    color: #999;
}
/* Action Buttons Section */
#engraving-modal .action-buttons-section {
    padding: 0 30px 30px 30px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}
#engraving-modal .btn-save {
    background: #333;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s ease;
    width: 100%;
}
#engraving-modal .btn-save:hover {
    background: #555;
}
#engraving-modal .btn-cancel {
    background: none;
    color: #666;
    border: none;
    padding: 8px 20px;
    font-size: 16px;
    cursor: pointer;
    transition: color 0.3s ease;
    text-decoration: underline;
    width: 100%;
}
