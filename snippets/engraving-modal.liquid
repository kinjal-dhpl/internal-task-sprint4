</style>

<script>
function clearEngraveTextInput(){
        const engraveTextInput = document.querySelector("#engraving-text-input");
        if(engraveTextInput) engraveTextInput.value = '';
    }
document.addEventListener('DOMContentLoaded', function() {
    const engravingModal = document.getElementById('engraving-modal');
    const closeButtons = document.querySelectorAll('[data-action="close-engraving-modal"]');
    const saveButton = document.querySelector('[data-action="save-engraving"]');
    const textInput = document.getElementById('engraving-text-input');
    // sdisable/enable submit btn
    textInput.addEventListener('input',x=>{
        saveButton.disabled = !(textInput.value.length > 0);
    })
    
    // Handle modal close
    closeButtons.forEach(button => {
        button.addEventListener('click', closeEngravingModal);
    });
    
    // Close modal when clicking overlay
    engravingModal.addEventListener('click', function(e) {
        if (e.target === engravingModal) {
            closeEngravingModal();
        }
    });
    
    // Handle save button
    saveButton.addEventListener('click', function() {
        saveEngraving();
    });
    
    // Keyboard support
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && engravingModal.classList.contains('active')) {
            closeEngravingModal();
        }
    });
    
    // Global function to open engraving modal
    window.openEngravingModal = function() {
        engravingModal.classList.add('active');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
        // Focus on the text input
        setTimeout(() => {
            textInput.focus();
        }, 100);
    };
    
    function closeEngravingModal() {
        clearEngraveTextInput();
        engravingModal.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
    }
    
    function saveEngraving() {
        const selections = {};
        
        // Get engraving text
        selections['engraving-text'] = textInput.value.trim();
        
        console.log('Engraving saved:', selections);
        
        // Close modal after saving
        closeEngravingModal();
        
        // Show engraving summary
        if (window.showEngravingSummary) {
            window.showEngravingSummary(selections);
        }
        
        // Add your logic here for processing the engraving data
        // For example, you might want to update the product configuration
    }
});
</script>