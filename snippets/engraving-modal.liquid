#engraving-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}
#engraving-modal.active {
    display: flex;
}
#engraving-modal .modal-content {
    background: white;
    border-radius: 12px;
    width: 90%;
    max-width: 500px;
    max-height: 90vh;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}
#engraving-modal .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 30px;
    border-bottom: 1px solid #eee;
}
#engraving-modal .modal-title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin: 0;
}
#engraving-modal .modal-close {
    background: none;
    border: none;
    font-size: 28px;
    color: #999;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}
#engraving-modal .modal-close:hover {
    color: #333;
}
#engraving-modal .modal-body {
    padding: 0;
    display: flex;
    flex-direction: column;
}
/* Ring Image Section */
#engraving-modal .ring-image-section {
    width: 100%;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f9f9f9;
}
#engraving-modal .ring-preview {
    max-width: 100%;
    max-height: 200px;
    object-fit: contain;
}
/* Instructional Text */
#engraving-modal .instruction-text {
    padding: 20px 30px 10px 30px;
    text-align: center;
}
#engraving-modal .instruction-text p {
    font-size: 16px;
    color: #666;
    margin: 0;
    line-height: 1.4;
}
/* Input Section */
