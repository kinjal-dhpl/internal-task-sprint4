<!-- Engraving Modal -->
<div id="engraving-modal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Engrave Your Ring</h3>
            <button class="modal-close" data-action="close-engraving-modal">&times;</button>
        </div>

        <div class="modal-body">
            <!-- Ring Image -->
            <div class="ring-image-section">
                <img src="https://cdn.shopify.com/s/files/1/0664/3780/8182/files/perp_50_3_1.jpg?v=1754636375" alt="Ring Preview" class="ring-preview">
            </div>

            <!-- Instructional Text -->
            <div class="instruction-text">
                <p>Type in names, initials or numbers. You can even combine them</p>
            </div>

            <!-- Text Input -->
            <div class="input-section">
                <input type="text" id="engraving-text-input" class="text-input" placeholder="First line" maxlength="20">
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons-section">
                <button class="btn-save" data-action="save-engraving" disabled>Save</button>
                <button class="btn-cancel" data-action="close-engraving-modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<style>
