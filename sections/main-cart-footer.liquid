{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    /* Checkout button css */
  div.custom--checkout-button{position:relative}
  div#custom--button{
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      border-radius: 10px;
      z-index: 2;
      left: 0;
      cursor: pointer;
      bottom: 0;
      color: #fff;
      background-color: #181818;

  }
  .cart__blocks .js-contents .totals{
    display: flex;
    flex-direction: column;
  }
  .cart__footer #cart-errors{
    display:none;
  }
  /* Ends here */
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .partial-price-loader{
      display: none;
      font-size: 14px;
      color: #6b6b6b;
      margin-left: 8px;
    }
    .partial-price-loader.show{ display: inline-block; }
    /* Price box styling to match design */
    .price-box{
      background: #f6f6f7;
      border-radius: 14px;
      padding: 20px 20px 18px;
      position: relative;
      box-shadow: none;
      max-width: 100%;
    }
    .price-row{
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 6px 0;
    }
    .price-label{
      color: #6b6b6b;
      font-size: 14px;
      line-height: 1.2;
      max-width: 65%;
      white-space: normal;
    }
    .price-value{
      color: #111;
      font-weight: 700;
      text-align: right;
      font-size: 14px;
      min-width: 110px;
    }
    .price-divider{ margin: 10px 0; border-top: 0; }
    .price-note{ color:#8f8f8f; font-style: italic; font-size: 12px; margin-top:6px }
    /* position loader inside the price box top-right */
    .partial-price-loader{ position: absolute; top: 8px; right: 12px; display:none }
    .partial-price-loader.show{ display:inline-block }
{%- endstyle -%}

<div
  class="gradient color-{{ section.settings.color_scheme }}{% if cart == empty %} is-empty{% endif %}"
  id="main-cart-footer"
  data-id="{{ section.id }}"
>
  <div class="page-width">
    <div class="cart__footer isolate section-{{ section.id }}-padding">
      {%- if settings.show_cart_note -%}
        <cart-note class="cart__note field">
          <label for="Cart-note">{{ 'sections.cart.note' | t }}</label>
          <textarea
            class="text-area field__input"
            name="note"
            form="cart"
            id="Cart-note"
            placeholder="{{ 'sections.cart.note' | t }}"
          >{{ cart.note }}</textarea>
        </cart-note>
      {%- endif -%}

      <div class="cart__blocks">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'subtotal' -%}
              <div class="js-contents" {{ block.shopify_attributes }}>
                <div>
                  {%- if cart.cart_level_discount_applications.size > 0 -%}
                    <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount in cart.cart_level_discount_applications -%}
                        <li class="discounts__discount discounts__discount--position">
                          {%- render 'icon-discount' -%}
                          {{ discount.title }}
                          (-{{ discount.total_allocated_amount | money }})
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </div>

                <div class="totals">
                  {%- assign price_total = 0 -%}
                  {% for item in cart.items %}
                         {%- for property in item.properties -%}
                          {%- assign key = property.first | downcase -%}
                          {% if key == 'price' %}
                            {%- assign clean_price = property.last 
                              | remove: "Rs." 
                              | remove: "," 
                              | strip 
                            -%}
                            {%- assign item_price = clean_price | times: 100 -%}
                            {%- assign total_cart_price = item_price | times: item.quantity -%}
                            {%- assign price_total = price_total | plus: total_cart_price -%}
                          {% endif %} 
                          {% endfor %}
                          {% endfor %}
                          <div class="price-details">
                          <div class="price-box">
                            <div class="price-row">
                              <span class="price-label">Estimated Price:</span>
                              <span class="price-value" id="estimated-price">Rs. --,---/-</span>
                            </div>
                            <div class="price-row">
                              <span class="price-label">Advance Payment Amount:</span>
                              <span class="price-value" id="advance-payment">Rs. --,---/-</span>
                            </div>
                            <div class="price-row">
                              <span class="price-label">Estimated Balance:</span>
                              <span class="price-value" id="estimated-balance">Rs. --,---/-</span>
                            </div>
                            <div class="price-divider"></div>
                            <div class="price-note">(Please note, this amount may change at actual post product manufacturing)</div>
                            <div id="partial-price-loader" class="partial-price-loader" aria-hidden="true">Calculating...</div>
                          </div>
                        </div>
                  
                        </div>

                <small class="tax-note caption-large rte">
                  {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                    {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                  {%- elsif cart.taxes_included -%}
                    {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                  {%- elsif shop.shipping_policy.body != blank -%}
                    {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                  {%- else -%}
                    {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                  {%- endif -%}
                </small>
              </div>
            {%- else -%}
              <div class="cart__ctas custom--checkout-button" {{ block.shopify_attributes }}>
                <noscript>
                  <button type="submit" class="cart__update-button button button--secondary" form="cart">
                    {{ 'sections.cart.update' | t }}
                  </button>
                </noscript>

                <button
                  type="submit"
                  id="checkout"
                  class="cart__checkout-button button"
                  name="checkout"
                  {% if cart == empty %}
                    disabled
                  {% endif %}
                  form="cart"
                >
                  {{ 'sections.cart.checkout' | t }}
                </button>
                {% comment %} custom checkout button {% endcomment %}
                <div id="custom--button" onclick="redirectToDraftCheckout(this)">
                  {{ 'sections.cart.checkout' | t }}
                </div>
                {% comment %} Ends here {% endcomment %}
              </div>

              {%- if additional_checkout_buttons -%}
                <div class="cart__dynamic-checkout-buttons additional-checkout-buttons">
                  {{ content_for_additional_checkout_buttons }}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {% endfor %}

        <div id="cart-errors"></div>
      </div>
    </div>
  </div>
</div>
{% render 'partial-price-api' %}
<script>
  async function fetchCartData() {
    const response = await fetch('/cart.js');
    return await response.json();
  }
  async function sendCartToApi() {
    const cart = await fetchCartData();

    // Convert cart items â†’ API format (array of products)
    const products = cart.items.map(item => ({
      variantId: String(item.id),
      quantity: item.quantity,
      size: item.properties?.size
    }));

    // Fallback: legacy endpoint
    try {
      const response = await fetch(`${window.EA_MODULE_BASE_URL}/price/partial-price-calculation`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ products })
      });
      const data = await response.json();
      return data;
    } catch (err) {
      console.error('Legacy partial-price API call failed:', err);
      throw err;
    }
  }

  // Local price formatter (fallback if global `formatPrice` isn't available)
  function formatPrice(num) {
    if (typeof num === 'undefined' || num === null || isNaN(Number(num))) return '0.00';
    return Number(num).toLocaleString('en-IN', { maximumFractionDigits: 2 });
  }

  // Helpers: show/hide the inline loader
  function showPartialLoader() {
    const l = document.getElementById('partial-price-loader');
    if (l) {
      l.classList.add('show');
      l.setAttribute('aria-hidden', 'false');
    }
  }
  function hidePartialLoader() {
    const l = document.getElementById('partial-price-loader');
    if (l) {
      l.classList.remove('show');
      l.setAttribute('aria-hidden', 'true');
    }
  }

  // Lightweight debounce helper
  function debounce(fn, wait) {
    let t = null;
    return function (...args) {
      if (t) clearTimeout(t);
      t = setTimeout(() => {
        t = null;
        fn.apply(this, args);
      }, wait);
    };
  }

  // Fetch partial prices and update the UI (with loader + error handling)
  async function fetchAndUpdatePartialPrices() {
    showPartialLoader();
    try {
      const data = await sendCartToApi();
      if (!data || !data.data) {
        console.error('Partial-price API returned no data:', data);
        return;
      }
      const dataArray = data.data;

      let totalOfTotalPrice = 0;
      let totalOfPartialPrice = 0;
      let totalEstimatedBalance = 0;
      dataArray.forEach(item => {
        let qty = parseFloat(item.quantity);
        totalOfTotalPrice += parseFloat(item.totalPrice?.total || 0) * qty;
        totalOfPartialPrice += parseFloat(item.partialPrice?.total || 0) * qty;
        totalEstimatedBalance += parseFloat(item.estimatedBalance || 0) * qty;
      });

      const estimatedPriceEl = document.getElementById('estimated-price');
      const advancePaymentEl = document.getElementById('advance-payment');
      const estimatedBalanceEl = document.getElementById('estimated-balance');

      if (estimatedPriceEl) estimatedPriceEl.textContent = `Rs. ${formatPrice(totalOfTotalPrice)}/-`;
      if (advancePaymentEl) advancePaymentEl.textContent = `Rs. ${formatPrice(totalOfPartialPrice)}/-`;
      if (estimatedBalanceEl) estimatedBalanceEl.textContent = `Rs. ${formatPrice(totalEstimatedBalance)}/-`;
    } catch (err) {
      console.error('Error updating partial prices:', err);
    } finally {
      hidePartialLoader();
    }
  }

  // Initial load (debounced)
  const debouncedUpdate = debounce(fetchAndUpdatePartialPrices, 500);
  debouncedUpdate();

  // Observe the cart area and re-fetch whenever the DOM or input values change
  const cartContainer = document.querySelector('#cart') || 
  document.querySelector('.cart__items') || 
  document.querySelector('.cart');
  if (cartContainer) {
    try {
    const observer = new MutationObserver(() => {
      debouncedUpdate();
    });

    observer.observe(cartContainer, {
      childList: true,
      subtree: true
    });
  } catch (e) {}
  }

</script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    function isIE() {
      const ua = window.navigator.userAgent;
      const msie = ua.indexOf('MSIE ');
      const trident = ua.indexOf('Trident/');

      return msie > 0 || trident > 0;
    }

    if (!isIE()) return;
    const cartSubmitInput = document.createElement('input');
    cartSubmitInput.setAttribute('name', 'checkout');
    cartSubmitInput.setAttribute('type', 'hidden');
    document.querySelector('#cart').appendChild(cartSubmitInput);
    document.querySelector('#checkout').addEventListener('click', function (event) {
      document.querySelector('#cart').submit();
    });
  });

  
  async function redirectToDraftCheckout(button) {
    const realCheckoutButton = button.closest('.custom--checkout-button').querySelector('button#checkout');
    try {
      onGlobalLoader();

      const cartData = await fetchCartData();
      const cartItems = cartData.items;
      console.log(cartItems, 'cartItems');

      const cartPayload = [];

      cartItems.forEach((item) => {
        const rawProps = item.properties || {};

        // Step 1: Normalize the keys and values (trim spaces)
        const normalizedProps = {};
        for (const key in rawProps) {
          const cleanKey = key.trim();
          const cleanValue = typeof rawProps[key] === 'string' ? rawProps[key].trim() : rawProps[key];
          normalizedProps[cleanKey] = cleanValue;
        }

        // Step 2: Build the cart payload
        cartPayload.push({
          quantity: item.quantity,
          variant_id: `${item.id}`,
          size: rawProps['size'], // size is passed as a top-level property too
          properties: rawProps,
        });
      });

      {% comment %} console.log('cartPayload ::', cartPayload); {% endcomment %}
      const myHeaders = new Headers();
      myHeaders.append('Content-Type', 'application/json');

      const raw = JSON.stringify({
        items: cartPayload,
      });

      const requestOptions = {
        method: 'POST',
        headers: myHeaders,
        body: raw,
        redirect: 'follow',
      };

      const response = await fetch(`${window.EA_MODULE_BASE_URL}/draft-orders/cart`, requestOptions);

      if (!response.ok) {
        console.error('Draft order creation failed with status:', response.status);
        realCheckoutButton?.click();
        return;
      }

      const result = await response.json();
      console.log('Draft Checkout URL:', result);
      if (result.responseCode === 0 && result.data?.draftOrder?.invoiceUrl) {
        location.href = result.data.draftOrder.invoiceUrl;
      } else {
        realCheckoutButton?.click();
      }
    } catch (error) {
      realCheckoutButton.click();
      console.error('Error in redirectToDraftCheckout:', error);
    } finally {
      offGlobalLoader();
    }
  }
</script>

