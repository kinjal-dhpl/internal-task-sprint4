<h3 data-aos="fade-zoom-in">{{ section.settings.title }}</h3>
<p data-aos="fade-zoom-in" class="ready-to-buy__subtitle">
  {{ section.settings.subtitle }}
</p>

<div class="ready-to-buy__grid">
  <div class="ready-to-buy__each ready-to-buy__each1">
    {% assign col_blocks = section.blocks | where: 'type', 'col' %}
    {% for block in col_blocks %}
      <img src="{{ block.settings.image | image_url }}" width="100%" height="auto">
      <span>
        <span style="color: black; display: block; font-family: 'oregon-ldo-medium';">
          {{ block.settings.text1 }}
        </span>
        <span style="display: block; font-family: 'oregon-ldo-medium'; color: #A5A5A5; font-size: 16px;">
          {{ block.settings.text2 }}
        </span>
      </span>
      <a href="{{ block.settings.button_url }}">{{ block.settings.button }}</a>
    {% endfor %}
  </div>

  {% assign row_blocks = section.blocks | where: 'type', 'row' %}
  {% for block in row_blocks %}
    <div class="ready-to-buy__each ready-to-buy__each2">
      <div>
        <div>
          <span>
            <span style="color: black; display: block; font-family: 'oregon-ldo-medium';">
              {{ block.settings.text1 }}
            </span>
            <span style="display: block; font-family: 'oregon-ldo-medium'; color: #A5A5A5; font-size: 16px;">
              {{ block.settings.text2 }}
            </span>
          </span>
        </div>

        <a href="{{ block.settings.button_url }}">{{ block.settings.button }}</a>
      </div>

      <div>
        <img src="{{ block.settings.image | image_url }}" width="100%" height="auto">
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Appointment Booking",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Title"
      }
    ],
    "blocks": [
      {
          "name": "Col",
           "type": "col",
           "limit": 1,
           "settings":[{
              "type": "image_picker",
              "id": "image",
              "label": "Image" 
             },
             {
              "type": "text",
              "id": "text1",
              "label": "Text Top" 
             },
             {
              "type": "text",
              "id": "text2",
              "label": "Text Bottom" 
             },
             {
              "type": "text",
              "id": "button",
              "label": "Button text" 
             },
             {
              "type": "text",
              "id": "button_url",
              "label": "Button URL" 
             }
          ]
       },
      {
          "name": "Row",
           "type": "row",
           "limit": 2,
           "settings":[{
              "type": "image_picker",
              "id": "image",
              "label": "Image" 
             },
             {
              "type": "text",
              "id": "text1",
              "label": "Text Top" 
             },
             {
              "type": "text",
              "id": "text2",
              "label": "Text Bottom" 
             },
             {
              "type": "text",
              "id": "button",
              "label": "Button text" 
             },
             {
              "type": "text",
              "id": "button_url",
              "label": "Button URL" 
             }
          ]
       }
    ],
    "presets": [{ "name": "Appointment Booking" }],
    "tag": "div",
    "class": "ready-to-buy page-width"
  }
{% endschema %}
