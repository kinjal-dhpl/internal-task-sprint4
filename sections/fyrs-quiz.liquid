function initSnapScroll() {
    const sections = Array.from(document.querySelectorAll(
        '.hero-section, .video-section, .cards-section'
    ));
    const video = document.querySelector('.bg-video');

    if (sections.length < 2) return;

    let activeIndex = 0;
    let snapping = false;
    let scrollIntent = 0;

    /* ---------- TRACK ACTIVE SECTION ---------- */
    const sectionObserver = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                activeIndex = sections.indexOf(entry.target);
            }
        });
    }, { threshold: 0.6 });

    sections.forEach(sec => sectionObserver.observe(sec));

    /* ---------- VIDEO PLAY / PAUSE ---------- */
    if (video) {
        const videoObserver = new IntersectionObserver(([entry]) => {
            entry.isIntersecting
                ? video.play().catch(() => {})
                : video.pause();
        }, { threshold: 0.6 });

        videoObserver.observe(video);

        video.addEventListener('ended', () => {
            snapTo(activeIndex + 1);
        });
    }

    /* ---------- SNAP FUNCTION ---------- */
   function snapTo(index) {
    if (snapping || index < 0 || index >= sections.length) return;

    snapping = true;

    const target = sections[index];

    // üîπ offset only for video section
    const offset = target.classList.contains('video-section')
        ? -80   // üëà adjust this value (negative = scroll up more)
        : 0;

    const top =
        target.getBoundingClientRect().top +
        window.pageYOffset +
        offset;

    window.scrollTo({
        top,
        behavior: 'smooth'
    });

    setTimeout(() => snapping = false, 600);
}


    /* ---------- DESKTOP / TRACKPAD ---------- */
    window.addEventListener('wheel', e => {
        if (snapping) return;

        scrollIntent += e.deltaY;

        if (scrollIntent > 120) {
            snapTo(activeIndex + 1);
            scrollIntent = 0;
        } else if (scrollIntent < -120) {
            snapTo(activeIndex - 1);
            scrollIntent = 0;
        }
    }, { passive: true });

    /* ---------- MOBILE SWIPE ---------- */
    let startY = 0;

    window.addEventListener('touchstart', e => {
        startY = e.touches[0].clientY;
    }, { passive: true });

    window.addEventListener('touchend', e => {
        if (snapping) return;

        const diff = startY - e.changedTouches[0].clientY;

        if (diff > 60) snapTo(activeIndex + 1);
        if (diff < -60) snapTo(activeIndex - 1);
    }, { passive: true });

    /* ---------- OPTIONAL AUTO SCROLL ---------- */
    setTimeout(() => {
        snapTo(1); // hero ‚Üí video
    }, 3000);
}

