function calculateTotalQuestions(startNode, count = 0) {
    if (!startNode || !startNode.options) return count;

    // Count this question
    count++;

    // Check all options for nested flows
    for (const option of startNode.options) {
        if (option.flow && option.flow.length > 0) {
            for (const nestedQuestion of option.flow) {
                count = calculateTotalQuestions(nestedQuestion, count);
            }
        }
    }

    return count;
}

